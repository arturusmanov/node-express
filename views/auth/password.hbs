<div class="auth">
    <div class="row">
        <div class="col s6 offset-s3">
            {{#if error}}
                <p class="alert">{{error}}</p>
            {{/if}}
            <h2>Введите новый пароль</h2>
            <form action="/auth/password" method="POST">
                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">password</label>
                    <span class="helper-text" data-error="Введите новый пароль"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">password again</label>
                    <span class="helper-text" data-error="Введите пароль еще раз"></span>
                </div>

                <input type="hidden" name="userId" value="{{userId}}">
                <input type="hidden" name="token" value="{{token}}">

                <button class="btn btn-primary">Подтвердить</button>
            </form>
        </div>
    </div>
</div>
